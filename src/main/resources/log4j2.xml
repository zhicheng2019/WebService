<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <!-- 定义输出位置 -->
    <Appenders>
        <!-- 输出到控制台 -->
        <Console name="Console" target="SYSTEM_OUT">
            <!-- 输出信息的格式 -->
            <PatternLayout pattern="%d %C %m %n"></PatternLayout>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
            <!-- 对info级别的信息输出到控制台  -->
            <AppenderRef ref="Console" level="info"/>
        </Root>
    </Loggers>
</Configuration>
